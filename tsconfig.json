{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@app/*": ["./apps/*"],
            "@web/*": ["./apps/web/*"],
            "@api/*": ["./apps/api/*"],
            "@shared/*": ["./shared/*"]
        },
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "dist"]
}